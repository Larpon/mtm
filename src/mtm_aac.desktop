[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin
MimeType=audio/mp4
Actions=2wav;2ogg;2mp3;about;
Encoding=UTF-8
X-KDE-Submenu=Convert
X-KDE-Submenu[da]=Konvert√©r

[Desktop Action 2wav]
Name=wav
Icon=audio-x-wav
Exec=mtm_x2x aac wav %U

[Desktop Action 2ogg]
Name=ogg
Icon=audio-x-wav
Exec=mtm_x2x aac ogg %U

[Desktop Action 2mp3]
Name=mp3
Icon=audio-x-wav
Exec=mtm_x2x aac mp3 %U

[Desktop Action about]
Name=About MTM
Name[da]=Om MTM
Icon=help
Exec=mtm_utility about
